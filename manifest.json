{
  "manifest_version": 3,
  "name": "PESU PDF Helper",
  "version": "12.0",
  "description": "A personal dashboard with an offline downloader for PESU Academy.",
  "permissions": [
    "storage",
    "downloads",
    "scripting",
    "contextMenus",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "*://*.pesuacademy.com/*"
  ],
  "action": {
    "default_icon": "icon48.png",
    "default_title": "PESU PDF Helper",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.pesuacademy.com/Academy/s/studentProfilePESU*"],
      "js": ["content_script.js"],
      "css": ["content_style.css"],
      "all_frames": true
    }
  ]
}