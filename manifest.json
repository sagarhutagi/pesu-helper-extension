{
  "manifest_version": 3,
  "name": "PESU PDF Helper",
  "version": "8.0",
  "description": "A personal dashboard to track study time and manage PESU Academy notes.",
  "permissions": [
    "storage",
    "downloads",
    "scripting",
    "contextMenus",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "*://*.pesuacademy.com/*"
  ],
  "action": {
    "default_icon": "icon48.png",
    "default_title": "PESU PDF Helper",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}